<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ukie.ukie">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayMessageActivity"
            android:parentActivityName=".MainActivity">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".Exercises"
            android:label="@string/title_activity_exercises"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Badges"
            android:label="@string/title_activity_badges"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Friends"
            android:label="@string/title_activity_friends"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ForumsActivity"
            android:label="@string/title_activity_forums"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ukie.ukie.MainActivity" />
        </activity>
        <activity
            android:name=".ReportActivity"
            android:label="@string/title_activity_report"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ukie.ukie.MainActivity" />
        </activity>
        <activity
            android:name=".Questions"
            android:label="@string/title_activity_questions"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ukie.ukie.MainActivity" />
        </activity>
        <activity
            android:name=".google_login"
            android:label="@string/title_activity_google_login"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ukie.ukie.MainActivity" />
        </activity>
        <activity
            android:name=".ImageQuestions"
            android:label="@string/title_activity_image_questions"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AudioQuestions"
            android:label="@string/title_activity_audio_questions"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".dropdownQuestions"
            android:label="@string/title_activity_dropdown_questions"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".radioQuestions"
            android:label="@string/title_activity_radio_questions"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".loadingScreen"
            android:label="@string/title_activity_loading_screen"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".splashScreen"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".QuestionBlock"
            android:label="@string/title_activity_question_block"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ModuleActivity"
            android:label="@string/title_activity_module"
            android:theme="@style/AppTheme" />
