            android:name=".QuestionBlockCompletedActivity"
            android:label="@string/title_activity_question_block_completed"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".pairingQuestions"
            android:label="@string/title_activity_pairing_questions"
            android:theme="@style/AppTheme" />
